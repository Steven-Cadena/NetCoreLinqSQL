@model List<Empleado>

<h1>Todos Empleados LINQ to SQL</h1>

    <a class="btn btn-secondary"
       asp-controller="Empleados"
       asp-action="BuscarEmpleadosOficioSalario">
        Buscar empleado oficio/salario
    </a><br />

<table class="table table-primary">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Oficio</th>
            <th>Salario</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Empleado emp in Model) 
        {
            <tr>
                <td>@emp.Apellido</td>
                <td>@emp.Oficio</td>
                <td>@emp.Salario</td>
                <td>

                    <a asp-controller="Empleados"
                       asp-action="Details"
                       asp-route-idempleado="@emp.IdEmpleado"
                       class="btn btn-success">
                        Detalles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>